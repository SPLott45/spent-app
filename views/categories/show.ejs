<body>
    

</section>

<h2>Transactions</h2>
<form id="add-transaction-form" method="POST"
    action="/categories/<%= category._id %>/transactions">
    <label>Merchant</label>
    <textarea id="merchant" name="merchant"></textarea>
    <label>Amount</label>
    <input type="number" id="amount" name="amount">
    <label>Description</label>
    <textarea id="description" name="description"></textarea>
    <input type="submit" value="Add Transaction">
</form>

<% if (category.transactions.length) { %>
    <table>
        <thead>
            <tr>
                <th>Merchant</th>
                <th>Amount</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <% category.transactions.forEach(function(r) { %>
                <tr>
                    <td><%= r.createdAt.toLocaleDateString() %></td>
                    <td><%= r.merchant %></td>
                    <td><%= r.description %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <h5>You Haven't Spent Any Money Yet!</h5>
<% } %>
</body>
</html>